        });
    }


    /* */
    var orderTime = '';
    function checkOrderTime() {
        $.ajax({
            type: 'post',
            url: '/Products/checkOrderTime',
            data: {},
            async: false,
            success: function (response) {
                orderTime = response;
            }
        });
        return orderTime;
    }
    
    /* Get item session data*/
    var itemVal = '';
    function getItemData() {
        $.ajax({
            type: 'POST',
            url: '/Products/getitemdata',
            async: false,
            success: function (response) {
                itemVal = response;
            }
        });
        return itemVal;
    }  

